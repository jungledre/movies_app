<% include ../header %>

<h1 style="color: white; font-size:72pt; text-align:center;">watchlist</h1>



<div class="container" id="chunk">
   <div class="row">
      <div class="col-md-12" id="chunk">
         <% for (var i = 0; i < watchlist.length; i++) { %>
         <% if (watchlist.length != 0) {%>
         <div class="container-fluid" id="movie-item">
            <div class="row">
               <div class="col-xs-1 text-center" id="movie-count">
                  <%= i + 1 %>
               </div>
               <div class="col-xs-10" id="movie-title">
                  <a href="/movies/<%= watchlist[i].code %>">
                     <ul>
                        <li><%= watchlist[i].title %></li>
                        <li>(<%= watchlist[i].year %>)</li>
                     </ul>
                  </a>
               </div>
               <div class="col-xs-1" id="delete-button">
                  <a href="/movies/<%= watchlist[i].code %>"></a>
                  <a href="#" data-id="<%= watchlist[i].id %>" class="deleteWatch">DELETE</a>
               </div>
            </div>
            </div>
         <%  } %>
         <% } %>
         <!-- <div class="col-md-4"></div> -->
      </div>
   </div>
</div>
<% include ../footer %>
