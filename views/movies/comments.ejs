<% include ../header %>

<div class="container">
    <h1 style="color: white; font-size:72pt; text-align:center;">COMMENTS</h1>

    <form role="form" action="/movies/watchlist/<%= commentId %>/comments" method="POST">

      <div class="form-group">
        <textarea class="form-control" rows="3" name="text"></textarea>
      </div>

      <button type="submit" class="btn btn-default">Add Comment</button>
    </form>
    <% for (var i = 0; i < returnMe.length; i++) { %>
    <div>
        <h1>Comments:</h1> <%= returnMe[i].text %>

    </div>
    <% } %>

</div>


<% include ../footer %>
