<% include /header %>

<h1>watchlist</h1>

<div class="container">
   <div class="row" id="whiteBlock">
      <div class="col-md-12">
         <% for (var i = 0; i < watchlist.length; i++) { %>
            <% if (watchlist.length != 0) {%>
               <div class="container-fluid" id="watchlist-item">
                  <div class="row">
                     <div class="col-xs-1 text-center" id="movie-count">
                        <%= i + 1 %>
                     </div>
                     <div class="col-xs-7" id="movie-title">
                        <a href="/movie/<%= watchlist[i].code %>">
                           <ul>
                              <li><%= watchlist[i].title %><br>(<%= watchlist[i].year %>)</li>
                           </ul>
                        </a>
                     </div>
                     <div class="col-xs-4" id="add-or-delete">
                        <div id="comment-button">
                           <a href="/watchlist/<%= watchlist[i].id %>/comments" data-id="<%= watchlist[i].id %>" class="commentWatch"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        </div>
                        <div id="delete-button">
                           <a href="#" data-id="<%= watchlist[i].id %>" class="deleteWatch"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </div>
                     </div>
                  </div>
               </div>
            <% } %>
         <% } %>
      </div>
   </div>
</div>
<% include /footer %>
